{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "packages": [
    "security-actions/**"
  ],
  "ignoreChanges": ["**/*.md"],
  "command": {
    "version": {
      "message": "chore(release): publish [skip ci]",
      "allowBranch": ["main"],
      "conventionalCommits": true,
      "changelogPreset": "metahub",
      "gitTagCommand": "bash -c 'orig=%s; git tag \"$orig\" -m \"$orig\"; alias=\\${orig#@}; git tag \"$alias\" -m \"$alias\"'"
    }
  }
}
